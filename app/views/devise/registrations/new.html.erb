<div class="static-wrapper row d-flex">
  <div class="left-panel-image d-xs-none d-md-flex col-md-7 position relative">
    <div class="position-absolute catchy">Life is a journey let's explore together! </div>
  </div>
  <div class="col-xs-10 offset-sm-1 col-md-5 offset-md-0 d-flex flex-column">
    <h1 class="static-title py-3 ml-auto mr-2 mt-0"><%= t('.sign_up') %></h1>
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), validate: true, html: { class: "floating-f white-bg mx-auto my-auto"} do |f| %>
      <%= bootstrap_devise_error_messages! %>
      <%= render 'logosvg' %>
      <div class="form-group">
        <%= f.text_field :username, autofocus: true, autocomplete: 'name', class: 'form-control', placeholder: '@username' %>
      </div>
      <div class="form-group">
        <%= f.text_field :full_name, autofocus: true, autocomplete: 'name', class: 'form-control', placeholder: 'Full name' %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Email' %>
      </div>
      <div class="form-group position-relative">
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Password' %>
        <% if @minimum_password_length %>
          <small class="form-warning form-text text-muted position-absolute"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control', placeholder: 'password confirmation' %>
      </div>
      <div class="d-flex justify-content-around">
        <div class="form-group">
          <%= f.submit t('.sign_up'), class: "btn outline-primary text-center mx-auto login mt-2" %>
        </div>
        <div>
          <% provide(:class, "btn outline-primary login mt-2") %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
