<div class="col-2 left-navigation-panel d-flex flex-column">
  <div class="d-flex user-tile w-100 justify-content-around align-items-center py-4">
    <div class="avatar">
      <%= gravatar_for(current_user, 75) %>
    </div>
    <div class="user-calling">
      <div class="f_name"><%= current_user.full_name %></div>
      <div class="u_name"><%= symbol_nick current_user%></div>
    </div>
  </div>
  <div class="d-flex user-tile-conex w-100">
    <div class="u_followers">
      <span > <%= current_user.followers.count %> </span>
      <span class="f_data">Followers</span>
    </div>
    <div class="u_followwing_count">
      <span> <%= current_user.followed_users.count %> </span>
      <span class="f_data">Following</span>
    </div>
  </div>
  <div class="d-flex flex-column user-links w-100">
    <%= link_to root_path, class: "user-link" do %>
      <div class="ic">
        <i class="icon fas fa-house-user"></i>
      </div>
      <div class="link-text">
        <span>Home</span>
      </div>
    <% end %>
    <%= link_to root_path, class: "user-link" do %>
      <div class="ic">
        <i class="icon fab fa-connectdevelop"></i>
      </div>
      <div class="link-text">
        <span>Connect</span>
      </div>
    <% end %>
    <%= link_to root_path, class: "user-link" do %>
      <div class="ic">
        <i class="icon fas fa-hashtag"></i>
      </div>
      <div class="link-text">
        <span>Discover</span>
      </div>
    <% end %>
    <%= link_to root_path, class: "user-link" do %>
      <div class="ic">
        <i class="icon fas fa-user"></i>
      </div>
      <div class="link-text">
        <span>Profile</span>
      </div>
    <% end %>
    <%= link_to root_path, class: "user-link" do %>
      <div class="ic">
        <i class="icon fas fa-chart-line"></i>
      </div>
      <div class="link-text">
        <span>Statics</span>
      </div>
    <% end %>
  </div>
</div>
